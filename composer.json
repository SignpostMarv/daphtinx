{
    "name": "signpostmarv/daphtinx",
    "description": "Phinx integration for daft-framework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "SignpostMarv",
            "email": "me@signpostmarv.name"
        }
    ],
    "autoload": {
        "psr-4": {
            "SignpostMarv\\DaftFramework\\Phinx\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SignpostMarv\\DaftFramework\\Phinx\\Tests\\": "./Tests/",
            "SignpostMarv\\DaftFramework\\Tests\\": "./vendor/signpostmarv/daft-framework/Tests/"
        }
    },
    "config": {
        "classmap-authoritative": true,
        "sort-packages": true
    },
    "scripts": {
        "tests": [
            "phpunit -vvvv",
            "phpstan analyse -c ./phpstan.neon .php_cs.dist src tests",
            "psalm",
            "phpcpd src",
            "phpmnd src",
            "php-cs-fixer fix --verbose --allow-risky=yes --dry-run"
        ]
    },
    "require": {
        "php": "^7.1",
        "robmorgan/phinx": "^0.9.2",
        "signpostmarv/daft-framework": "^0.1.6"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.9.2",
        "phpstan/phpstan-phpunit": "^0.9.4",
        "phpstan/phpstan-strict-rules": "^0.9.0",
        "phpunit/phpunit": "^7.1",
        "povils/phpmnd": "^2.0",
        "roave/security-advisories": "dev-master",
        "sebastian/phpcpd": "^4.0",
        "signpostmarv/php-cs-fixer-config": "^0.5.0",
        "vimeo/psalm": "^1.1"
    }
}
